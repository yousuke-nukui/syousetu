<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">上書きする</h1>
    <%= form_tag("/posts/#{@post.id}/create") do %>
    <div class="form">
      <div class="form-body">
        <textarea name="content"><%=@post.content %></textarea>
        <input type="submit" value="保存">
      </div>
    </div>
    <% end %>
  </div>
</div>
